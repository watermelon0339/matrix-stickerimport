stickers.mtxhk1.com {
    root * /var/www/stickerpicker/
    file_server

    @assets {
        path *.png *.jpg *.jpeg *.gif *.webp *.svg *.ico *.ttf *.otf *.woff *.woff2 *.map
    }
    header @assets Cache-Control "public, max-age=31536000, immutable"

    @html {
        path *.html
    }
    header @html Cache-Control "no-cache, must-revalidate"

    # Extensionless image URLs matched by Accept header
    @images_noext {
        header_regexp Accept ^image/.+
    }
    header @images_noext Cache-Control "public, max-age=31536000, immutable"
}